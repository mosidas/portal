---
interface Props {
  tag: string;
  count?: number;
  href?: string;
}

const { tag, count, href } = Astro.props;
const Component = href ? 'a' : 'span';
---

<Component 
  href={href}
  class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300 ${href ? 'hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors' : ''}`}
>
  #{tag}
  {count !== undefined && (
    <span class="ml-1 text-blue-600 dark:text-blue-400">({count})</span>
  )}
</Component>